FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /diplom-app
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

FROM eclipse-temurin:17-jre-alpine
WORKDIR /diplom-app
COPY --from=build /diplom-app/target/*.jar diplom-app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "diplom-app.jar"]